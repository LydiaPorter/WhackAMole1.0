<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meadowfence"
    android:orientation="vertical"
    tools:context=".WmTitleScreen">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="Whack-A-Mole"
        android:textColor="#000000"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/titleMole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="mole being hit with a hammer"
        android:src="@drawable/angrymoleremovebg"
        android:layout_marginLeft="7dp" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:onClick="onClick"
        android:text="Play"
        android:textAlignment="center"
        android:textSize="24sp"
        app:backgroundTint="#33AA38"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/startOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:onClick="onClick"
        android:text="OPTIONS"
        android:textAlignment="center"
        android:textSize="24sp"
        app:backgroundTint="#33AA38"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>